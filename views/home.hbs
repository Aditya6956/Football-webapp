{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  Team has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Teams</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addteam" type="button" class="btn btn-primary align-self-center">+ Add Team</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">League</th>
      <th scope="col">Team</th>
      <th scope="col">Team logo</th>
      <th scope="col">Venue</th>
      <th scope="col">Venue Image</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.league}}</td>
      <td>{{this.teamName}}</td>
      <td><img src={{this.teamLogo}} alt="No Image" height="300px" width="250px"></td>
      <td>{{this.venue}}</td>
      <td><img src={{this.venueImage}} alt="No Image" height="300px" width="350px"></td>
      <td class="text-end">
        <a href="/viewteam/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/editteam/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>